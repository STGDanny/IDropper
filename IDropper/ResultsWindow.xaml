<Window x:Class="IDropper.ResultsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:IDropper"
		mc:Ignorable="d"
		Title="IDropper Results" 
		Height="165" Width="300"
		ResizeMode="NoResize"
		Topmost="True">
	<Canvas>
		<Button Name="NewColourButton" Content="New Colour" Click="NewColourButton_Click" Height="30" Width="300" />
		<Rectangle Name="ColourDisplay" Height="89" Width="90" Canvas.Top="35"></Rectangle>
		<TextBlock Name="RValue" Canvas.Left="95" Canvas.Top="35"></TextBlock>
		<TextBlock Name="GValue" Canvas.Left="95" Canvas.Top="56"></TextBlock>
		<TextBlock Name="BValue" Canvas.Left="95" Canvas.Top="77"></TextBlock>
		<TextBlock Name="HexValue" Canvas.Left="95" Canvas.Top="98"></TextBlock>
	</Canvas>
</Window>
